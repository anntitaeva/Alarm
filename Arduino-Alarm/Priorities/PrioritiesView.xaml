<Window x:Class="Arduino_Alarm.PrioritiesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Arduino_Alarm"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Set priorities"
        Height="350"
        Width="504"
        mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Offset="0.368" Color="#FF3A1D1D" />
                <GradientStop Offset="1" Color="#FF763232" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="247*" />
            <ColumnDefinition Width="249*" />
        </Grid.ColumnDefinitions>
        <Button x:Name="OK"
                Margin="0,240,0,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Width="108"
                Height="41" 
                Background="#FF62E08A"
                BorderBrush="#FFD48E8E"
                Foreground="White"
                FontSize="18"
                BorderThickness="0" 
                Content="OK"
                Click="OK_Click" />
        <Button x:Name="Cancel"
                Grid.Column="1"
                Margin="10,240,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="#FFB155BF"
                Foreground="White"
                BorderBrush="#FFD48E8E"
                Width="108" 
                Height="41" 
                FontSize="18"
                Content="Cancel"
                Click="Cancel_Click" />
        <ListBox x:Name="listBox"
                 Width="126"
                 Height="137"
                 Margin="91,75,0,0"
                 
                 HorizontalAlignment="Left"
                 BorderBrush="Transparent"
                 VerticalAlignment="Top"
                 Background="Transparent"
                 SelectedItem="{Binding Path=ItemsSelected, UpdateSourceTrigger=PropertyChanged}"   ItemsSource="{Binding List1, UpdateSourceTrigger=PropertyChanged}"
                 SelectionMode="Multiple">
  
        </ListBox>
        <ListBox x:Name="listBox_Copy"
                 Width="120"
                 Height="137"
                 Margin="162,60,0,0"
                 HorizontalAlignment="Left"
                 SelectionMode="Multiple"
                 SelectedItem="{Binding ItemsSelected2}"
                 ItemsSource="{Binding Path=List2,UpdateSourceTrigger=PropertyChanged}"
                 
                 VerticalAlignment="Top" BorderBrush="#FF89A0CB" Visibility="Hidden">
            <ListBox.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0.368" Color="#FF3A1D1D" />
                    <GradientStop Offset="1" Color="#FF763232" />
                </LinearGradientBrush>
            </ListBox.Background>
        </ListBox>
        <Label x:Name="label"
               Grid.ColumnSpan="2"
               Margin="0,10,0,0"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Content="CHOOSE SUBJECTS"
               Foreground="White"
               FontSize="20" />
        <Label x:Name="label1"
               Grid.Column="0"
               Margin="0,37,26,0"
               HorizontalAlignment="Right"
               VerticalAlignment="Top"
               Content="Very important subjects"
               Foreground="White" />
        <Label x:Name="label2"
               Grid.Column="1"
               Margin="26,37,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Important subjects"
               Foreground="White" />
        <Button x:Name="button2"
                Width="26"
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="#FF44ABBB"
                Foreground="White"
               
                BorderThickness="0"
                Content="&gt;&gt;" Click="button2_Click" Grid.ColumnSpan="2" />
        <Button x:Name="button" Content="&lt;&lt;"
                Width="26"
                Visibility="Hidden"
                Margin="136,125,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="#FF8B5656"
                BorderBrush="#FFD48E8E"
                BorderThickness="0" Click="button_Click"/>
    </Grid>
</Window>
