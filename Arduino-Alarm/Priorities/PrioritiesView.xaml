<Window x:Class="Arduino_Alarm.PrioritiesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Arduino_Alarm"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Set priorities"
        Width="504"
        Height="350"
        mc:Ignorable="d">
    <Grid Background="#FF00527A">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="247*"/>
            <ColumnDefinition Width="249*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="OK"
               Width="108"
                Height="41"
                 Margin="0,0,136,20"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Background="#FF2ED5AF"
                BorderBrush="Transparent"
                BorderThickness="0"
                FontSize="18"
                Content="OK"
                Foreground="White" Click="OK_Click" Grid.Column="1" />
        <Button x:Name="Cancel"
                Width="108"
                Height="41"
                Margin="139,0,0,20"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Background="#FF2ED5AF"
                BorderBrush="Transparent"
                Content="Cancel"
                FontSize="18"
                Foreground="White" Click="Cancel_Click" />
        <ListBox x:Name="listBox"
                 Width="126"
                 Height="137"
                 Margin="175,109,0,0"
                 ItemsSource="{Binding List1}"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 SelectionMode="Multiple" Background="{x:Null}" BorderBrush="{x:Null}" Grid.ColumnSpan="2"/>
        <Label x:Name="label"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="CHOOSE SUBJECTS"
               Margin="30,20,0,0"
               FontSize="32"
               Foreground="White" Grid.ColumnSpan="2"
 />
        <Label x:Name="label1"
               Margin="175,78,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Very important subjects"
               Foreground="White" Grid.ColumnSpan="2" />
        <Image Grid.Column="1" HorizontalAlignment="Right" Height="51" Margin="0,15,20,0" VerticalAlignment="Top" Width="57" Source="/Arduino-Alarm;component/Resources/alarm2.jpg"/>
    </Grid>
</Window>
